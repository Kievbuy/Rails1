      <li class="nav-item">
      <% if user_signed_in? %>
          <span>Hello, <%= current_user.username %>! </span>
          <%= link_to 'Log out', destroy_user_session_path, :method => :delete %>
      <% else %>
          <%= link_to 'Log In', new_user_session_path %> or <%= link_to 'Sign In', new_user_registration_path %>
