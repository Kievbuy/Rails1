<h1>Contact us</h1>

<br>

<%= form_for :article, url: articles_path do |f| %>
    <p>
      <%= f.label :title %> <br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :phone %> <br>
      <%= f.text_field :phone %>
    </p>
    <p>
      <%= f.label :email %> <br>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :message %> <br>
      <%= f.text_area :message %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>