<h1>Edit article: "<%= @article.title %>"</h1>
<br>

<%= form_for :article, url: article_path(@article), method: :put do |f| %>
    <p>
      <%= f.label :title %> <br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :text %> <br>
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>